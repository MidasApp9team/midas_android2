<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@drawable/background_white_board"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_name"
            style="@style/basic_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="이름: "
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_start_time"
            style="@style/basic_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="출근시간 10:30"
            android:textColor="#7CFF67"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.133"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <TextView
            android:id="@+id/tv_end_time"
            style="@style/basic_small_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="퇴근 시간 7:00"
            android:textColor="#FE6363"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.131"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_start_time" />

        <EditText
            android:id="@+id/et_in"
            style="@style/basic_small_text"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="출근시간 변경"
            app:layout_constraintBottom_toBottomOf="@+id/tv_start_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_start_time"
            app:layout_constraintTop_toTopOf="@+id/tv_start_time" />

        <EditText
            android:id="@+id/et_out"
            style="@style/basic_small_text"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:hint="퇴근시간 변경"
            app:layout_constraintBottom_toBottomOf="@+id/tv_end_time"
            app:layout_constraintStart_toEndOf="@+id/tv_end_time"
            app:layout_constraintTop_toTopOf="@+id/tv_end_time"
            app:layout_constraintVertical_bias="0.428" />

        <Button
            android:id="@+id/btn_change"
            style="@style/btn_text"
            android:layout_marginTop="76dp"
            android:text="변경"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_out" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>